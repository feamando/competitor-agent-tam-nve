{
  "name": "competitor-research-agent",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=4096 --max-http-header-size=16384 --enable-source-maps\" next dev",
    "build": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=4096\" next build",
    "start": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=8192 --no-compilation-cache --stack-trace-limit=50 --max-http-header-size=16384\" next start",
    "start:memory-optimized": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=4096\" next start",
    "start:production": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=8192 --no-compilation-cache --stack-trace-limit=50\" next start",
    "start:staging": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=6144 --stack-trace-limit=100 --max-http-header-size=16384 --enable-source-maps\" next start",
    "start:test": "NODE_OPTIONS=\"--expose-gc --max-old-space-size=2048 --max-http-header-size=8192 --enable-source-maps\" next start",
    "lint": "next lint",
    "test": "jest --testTimeout=60000",
    "test:unit": "jest --testTimeout=30000 --testPathPattern='src/__tests__/unit' --maxWorkers=4",
    "test:unit:fast": "jest --testTimeout=15000 --testPathPattern='src/__tests__/unit' --maxWorkers=4 --no-coverage --passWithNoTests",
    "test:integration": "jest --testTimeout=60000 --testPathPattern='src/__tests__/integration' --runInBand",
    "test:e2e:jest": "jest --testTimeout=60000 --testPathPattern='src/__tests__/e2e' --runInBand",
    "test:watch": "jest --watch --testTimeout=30000",
    "test:coverage": "jest --coverage --testTimeout=60000",
    "test:fast": "jest --testTimeout=15000 --maxWorkers=4 --no-coverage --passWithNoTests --silent",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --testTimeout=60000",
    "test:e2e": "playwright test",
    "test:e2e:playwright": "playwright test",
    "test:e2e:all": "npm run test:e2e:jest && npm run test:e2e:playwright",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:regression": "playwright test --grep='@regression'",
    "test:visual": "playwright test --grep='@visual'",
    "test:performance": "playwright test --grep='@performance'",
    "test:smoke": "jest --selectProjects regression --testNamePattern='smoke'",
    "test:critical": "jest --selectProjects regression --testNamePattern='critical'",
    "test:comprehensive": "./scripts/run-comprehensive-integration-tests.sh",
    "test:comprehensive:integration": "./scripts/run-comprehensive-integration-tests.sh --integration-only",
    "test:comprehensive:e2e": "./scripts/run-comprehensive-integration-tests.sh --e2e-only",
    "test:comprehensive:performance": "./scripts/run-comprehensive-integration-tests.sh --performance-only",
    "test:task-8-1": "./scripts/run-comprehensive-integration-tests.sh",
    "test:load": "artillery run load-tests/config/artillery.yml",
    "test:load:api": "artillery run load-tests/config/api-load-test.yml",
    "test:load:consolidated": "./scripts/run-load-performance-tests.sh",
    "test:load:light": "./scripts/run-load-performance-tests.sh --profile light",
    "test:load:normal": "./scripts/run-load-performance-tests.sh --profile normal",
    "test:load:heavy": "./scripts/run-load-performance-tests.sh --profile heavy",
    "test:load:stress": "./scripts/run-load-performance-tests.sh --profile stress",
    "test:load:artillery": "./scripts/run-load-performance-tests.sh --artillery-only",
    "test:load:concurrent": "./scripts/run-load-performance-tests.sh --concurrent-only",
    "test:task-8-2": "./scripts/run-load-performance-tests.sh",
    "test:rollback": "./scripts/run-rollback-tests.sh",
    "test:rollback:emergency": "./scripts/run-rollback-tests.sh --mode emergency",
    "test:rollback:controlled": "./scripts/run-rollback-tests.sh --mode controlled",
    "test:rollback:full-cycle": "./scripts/run-rollback-tests.sh --mode full-cycle",
    "test:rollback:feature-flags": "./scripts/run-rollback-tests.sh --feature-flags-only",
    "test:rollback:consistency": "./scripts/run-rollback-tests.sh --data-consistency-only",
    "test:rollback:load": "./scripts/run-rollback-tests.sh --load-testing-only",
    "test:rollback:procedures": "./scripts/run-rollback-tests.sh --procedures-only",
    "test:rollback:simulation": "./scripts/run-rollback-tests.sh --emergency-simulation",
    "test:task-8-3": "./scripts/run-rollback-tests.sh",
    "test:load:browser": "node load-tests/browser-load-test.js",
    "test:load:full": "./scripts/run-load-tests.sh",
    "test:server:start": "./scripts/test-server-manager.sh start",
    "test:server:stop": "./scripts/test-server-manager.sh stop",
    "test:server:status": "./scripts/test-server-manager.sh status",
    "test:server:restart": "./scripts/test-server-manager.sh restart",
    "test:e2e:with-server": "./scripts/test-server-manager.sh start && npm run test:e2e:playwright; ./scripts/test-server-manager.sh stop",
    "analyze:bundle": "cross-env ANALYZE=true npm run build",
    "db:reset": "npx prisma migrate reset --force && npx prisma db seed"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@aws-sdk/client-bedrock-runtime": "^3.821.0",
    "@aws-sdk/credential-providers": "^3.823.0",
    "@azure/msal-node": "^3.5.3",
    "@bull-board/api": "^6.9.6",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@mistralai/mistralai": "^1.7.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.8.2",
    "@tanstack/react-query": "^5.77.2",
    "@trpc/client": "^11.1.3",
    "@trpc/react-query": "^11.1.3",
    "@trpc/server": "^11.1.3",
    "@types/handlebars": "^4.0.40",
    "@types/js-cookie": "^3.0.6",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.9.0",
    "bull": "^4.16.5",
    "cheerio": "^1.0.0",
    "cron-parser": "^5.2.0",
    "date-fns": "^4.1.0",
    "diff": "^8.0.2",
    "dotenv": "^16.5.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.6.1",
    "js-cookie": "^3.0.5",
    "launchdarkly-node-server-sdk": "^7.0.4",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "node-cron": "^4.1.0",
    "nodemailer": "^6.9.0",
    "openai": "^4.103.0",
    "p-limit": "^6.2.0",
    "p-queue": "^8.1.0",
    "puppeteer": "^24.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "redis": "^5.6.0",
    "zod": "^3.25.32"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.2",
    "artillery": "^2.0.22",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "lighthouse": "^12.6.1",
    "msw": "^2.9.0",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.52.0",
    "supertest": "^7.1.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.4",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "description": "An AI-powered competitor research and analysis tool that helps businesses track and analyze their competitors' activities, market trends, and strategic changes.",
  "main": "jest.config.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
